{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@password-manager:api:config": ["apps/password-manager-api/src/config"],
            "@password-manager:api:config/*": ["apps/password-manager-api/src/config/*"],
            "@password-manager:api:controllers": ["apps/password-manager-api/src/controllers"],
            "@password-manager:api:controllers/*": ["apps/password-manager-api/src/controllers/*"],
            "@password-manager:api:interceptors": ["apps/password-manager-api/src/interceptors"],
            "@password-manager:api:interceptors/*": ["apps/password-manager-api/src/interceptors/*"],
            "@password-manager:api:interfaces": ["apps/password-manager-api/src/types/interfaces"],
            "@password-manager:api:interfaces/*": ["apps/password-manager-api/src/types/interfaces/*"],
            "@password-manager:api:middleware": ["apps/password-manager-api/src/middleware"],
            "@password-manager:api:middleware/*": ["apps/password-manager-api/src/middleware/*"],
            "@password-manager:api:providers": ["apps/password-manager-api/src/providers"],
            "@password-manager:api:providers/*": ["apps/password-manager-api/src/providers/*"],
            "@password-manager:api:repositories": ["apps/password-manager-api/src/repositories"],
            "@password-manager:api:repositories/*": ["apps/password-manager-api/src/repositories/*"],
            "@password-manager:api:services": ["apps/password-manager-api/src/services"],
            "@password-manager:api:services/*": ["apps/password-manager-api/src/services/*"],
            "@password-manager:api:types": ["apps/password-manager-api/src/types"],
            "@password-manager:api:types/*": ["apps/password-manager-api/src/types/*"],
            "@password-manager:config": ["libs/password-manager-config/src/index.ts"],
            "@password-manager:crypto": ["libs/password-manager-crypto/src/index.ts"],
            "@password-manager:dynamodb-client": ["libs/password-manager-dynamodb-client/src/index.ts"],
            "@password-manager:logger": ["libs/password-manager-logger/src/index.ts"],
            "@password-manager:types": ["libs/password-manager-types/src/index.ts"],
            "@password-manager:ui:components": ["apps/password-manager-ui/src/app/components"],
            "@password-manager:ui:components/*": ["apps/password-manager-ui/src/app/components/*"],
            "@password-manager:ui:pages": ["apps/password-manager-ui/src/app/pages"],
            "@password-manager:ui:pages/*": ["apps/password-manager-ui/src/app/pages/*"],
            "@password-manager:ui:pages:app-container": ["apps/password-manager-ui/src/app/pages/app-container"],
            "@password-manager:ui:pages:app-container/*": ["apps/password-manager-ui/src/app/pages/app-container/*"],
            "@password-manager:ui:pages:auth": ["apps/password-manager-ui/src/app/pages/auth"],
            "@password-manager:ui:pages:auth/*": ["apps/password-manager-ui/src/app/pages/auth/*"],
            "@password-manager:ui:pages:registration": ["apps/password-manager-ui/src/app/pages/registration"],
            "@password-manager:ui:pages:registration/*": ["apps/password-manager-ui/src/app/pages/registration/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
